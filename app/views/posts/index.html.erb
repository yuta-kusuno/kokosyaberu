<% if logged_in? %>
  <div>
    <% if current_user.apartment.present? %>
      <%= render 'posts/posts.apartment', posts_apartment: @posts_apartment %>
    <% else %>
      <%= link_to "さっそく、アパート・マンション名を登録して住人と交流しよう！", edit_user_path(current_user) %>
      <%= render 'posts/posts', posts: @posts %>
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそ</h1>
      <%= link_to '新規登録する', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>