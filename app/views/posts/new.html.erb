<div class="container">
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :用件, class: 'control-label' %>
      <%= f.text_area :content, class: 'form-control', rows: 5 %>
      
      <%= f.label :日時, class: 'control-label' %>
      <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
        <%= f.text_field :datetime, class: 'form-control  datetimepicker-input', id: "datetime", data: {toggle: "datetimepicker", target: "#datetime"}, rows: 5 %>
        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datetimepicker1').datetimepicker();
          });
      </script>
      
      <%= f.label :場所, class: 'control-label' %>
      <%= f.text_field :place, class: 'form-control', rows: 5 %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  <% end %>
</div>

