<% user = User.find_by(id: @talk.receive_user_id) %>
<h2 class="text-center"><%= @user.name %>さんとのトーク</h2>

<% @talks.each do |talk| %>
  <div>
    <div class="media-left">
      <% if talk.user.photo.present? %>
        <%= image_tag talk.user.photo.url, size:'30×30' %>
      <% else %>
        <%= image_tag "icon.png", size: "30x30" %>
      <% end %>
    </div>
    <div class="media-body">
      <div>
        <%= link_to talk.user.name, user_path(talk.user) %> <span class="text-muted">posted at <%= talk.created_at %></span>
      </div>
      <div>
        <%= talk.content %>
        <br>
        <% if current_user == talk.user %>
          <%= link_to "削除", talk, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-outline-danger btn-sm' %>
        <% end %>
      </div>
    </div>
      <hr>
  </div>
<% end %>

<%= render 'talks/form', talk: @talk, user: @user %>