<h1>トーク履歴</h1>
<% user=User.find_by(id: user) %>
<% @talks.each do |talk| %>
  <div class="card" style="max-width: 500px;">
    <div class="row no-gutters">
      <div class="col-md-2">
          <img class="media-object img-circle" src="<%= gravatar_url(talk.user, { size: 50 }) %>" alt="">
      </div>
      <div class="col-md-10">
        <h4 class="card-title"><%= talk.user.name %></h4>
        <p class="card-text">
          <%= link_to talk.content.first(15), talk_path(talk) %>
        </p>
      </div>
    </div>
  </div>
<% end %>