<div class='container'>
  <h1 class='border-bottom'>プロフィール編集</h1>
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="profile">
      <% if @user.photo? %>
        <%= image_tag @user.photo.url, size: "150x150" %>
      <% else %>
        <%= image_tag "icon.png", size: "150x150" %>
      <% end %>
      <%= f.file_field :photo, class: 'form-control' %>
      
      <%= f.label :ニックネーム, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :性別, class: 'control-label' %>
      <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>

      <%= f.label :年齢, class: 'control-label' %>
      <%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代","70"], ["80代","80"] ], {},   class: 'form-control' %></div>
  
      <%= f.label :住所（郵便番号除く）, class: 'control-label' %>
      <%= f.text_field :adress, class: 'form-control' %>
      
      <%= f.label :マンション, class: 'control-label' %>
      <%= f.text_field :apartment, class: 'form-control' %>
  
      <%= f.label :メールアドレス, class: 'control-label' %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :自己紹介, class: 'control-label' %>
      <%= f.text_area :introduction, class: 'form-control' %>
      
      <%= f.submit "更新する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>