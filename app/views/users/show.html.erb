<div class="row">
  <aside class="col-sm-5">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      <div class="profile">
        <%= @user.sex %>
        <%= @user.age %>
        <%= @user.introduction %>
      </div>
    </div>
  </aside>
  <div class="col-sm-7">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link">自分の投稿一覧</a></li>
    </ul>
  </div>
</div>