<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <hr>
      <li class="media">
        <% if user.photo.present? %>
          <%= image_tag user.photo.thumb50.url %>
        <% else %>
          <%= image_tag "icon.png", size: "50x50" %>
        <% end %>
        <div class="media-body">
          <%= link_to user.name, user_path(user) %>
          </br>
          <% if user.introduction.present? %>
            <%= user.introduction %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>